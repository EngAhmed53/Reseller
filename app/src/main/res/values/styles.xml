<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/colorAccent</item>
    </style>

    <!--font styles-->

    <style name="LogoStyle" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/josefinsans_medium</item>
        <item name="fontFamily">@font/josefinsans_medium</item>
    </style>

    <style name="Headline4" parent="TextAppearance.MaterialComponents.Headline4">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="Headline5" parent="TextAppearance.MaterialComponents.Headline5">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="Headline6" parent="TextAppearance.MaterialComponents.Headline6">
        <item name="android:fontFamily">@font/jost_medium</item>
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2">
        <item name="android:fontFamily">@font/jost_medium</item>
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="Caption" parent="TextAppearance.MaterialComponents.Caption">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="Small" parent="TextAppearance.AppCompat.Small">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="Medium" parent="TextAppearance.AppCompat.Medium">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="Large" parent="TextAppearance.AppCompat.Large">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="Button" parent="TextAppearance.MaterialComponents.Button">
        <item name="android:fontFamily">@font/jost_medium</item>
        <item name="fontFamily">@font/jost_medium</item>
    </style>

    <style name="OverLine" parent="TextAppearance.MaterialComponents.Overline">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>

    <style name="Title" parent="TextAppearance.AppCompat.Title">
        <item name="android:fontFamily">@font/jost_regular</item>
        <item name="fontFamily">@font/jost_regular</item>
    </style>
    //////////////////////////

    <style name="materialInputLayoutCustomColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">
        <item name="boxStrokeColor">@color/material_input_layout_stroke_colors</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="android:textAppearance">@style/Medium</item>
    </style>

<!--    <style name="materialAutoCompleteCustomColor" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">-->
<!--        <item name="boxStrokeColor">@color/material_input_layout_stroke_colors</item>-->
<!--        <item name="boxStrokeWidth">1dp</item>-->
<!--    </style>-->

    <style name="MaterialSpinnerItem" parent="Widget.MaterialComponents.TextView">
        <item name="android:textColor">@color/primary_text</item>
        <item name="android:textAppearance">@style/Large</item>
        <item name="android:ellipsize">end</item>
        <item name="maxLines">1</item>
        <item name="singleLine">true</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/white</item>
    </style>


    <style name="AlertDialogTheme" parent="ThemeOverlay.MaterialComponents.MaterialAlertDialog">
        <item name="colorSurface">@color/white_blue</item>
        <item name="materialAlertDialogTitleTextStyle">@style/TitleTextStyle</item>
        <item name="materialAlertDialogBodyTextStyle">@style/BodyTextStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
    </style>

    <style name="TitleTextStyle" parent="MaterialAlertDialog.MaterialComponents.Title.Text">
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="BodyTextStyle" parent="MaterialAlertDialog.MaterialComponents.Body.Text">
        <item name="android:textColor">#807D7D</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">@color/colorAccent2</item>
        <item name="rippleColor">@color/colorAccent2</item>
    </style>

    <style name="NegativeButtonStyle" parent="Widget.MaterialComponents.Button.TextButton.Dialog">
        <item name="android:textColor">#757575</item>
        <item name="rippleColor">#a4a4a4</item>
    </style>


    <style name="BottomSheet" parent="@style/Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_bottom_sheet_dialog_fragment</item>
    </style>

    <style name="BaseBottomSheetDialog" parent="@style/Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="bottomSheetStyle">@style/BottomSheet</item>
    </style>

    <style name="BottomSheetDialogTheme" parent="BaseBottomSheetDialog" />


</resources>
